<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today you saved your lungs from:"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/statsPM1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 ug/m^3 of PM 1" />

        <TextView
            android:id="@+id/statsPM10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 ug/m^3 of PM 10" />

        <TextView
            android:id="@+id/statsPM25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 ug/m^3 of PM 25" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>